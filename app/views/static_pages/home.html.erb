<div class="row">
  <div class="col-md-12 text-center">
    <h1>Classified Reviewer</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <%= form_tag reviews_path, method: "get" do %>
      <%= text_field_tag :search, "", class: "form-control", id: "review-search", placeholder: "Enter a URL of a classified ad" %>
      <%= submit_tag "Search for review", name: nil, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% if logged_in? %>
  <div class="row", id="write-review-link">
    <div class="col-md-offset-3 col-md-6">
      <h2>Checked out a classified ad and want to write about it?</h2>
      <p>Write your review about it <%= link_to "here!", new_review_path %></p>
    </div>
  </div>
<% end %>



