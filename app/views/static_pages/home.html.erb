<div class="row">
  <div class="col-md-12 text-center">
    <h1 class="main-title">Classified Reviewer</h1>
  </div>
</div>

<div class="row">
  <div class=" col-md-offset-2 col-md-10">
    <%= form_tag reviews_path, method: "get" do %>
      <%= text_field_tag :search, "", class: "form-control", id: "review-search", placeholder: "Enter a URL of a classified ad" %>
      <%= submit_tag "Search for review", name: nil, class: "btn btn-primary", id: "search-button" %>
    <% end %>
  </div>
</div>

<% if logged_in? %>

  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h2 class="review-link">Write a review for a classified ad <%= link_to "here!", new_review_path %></h2>
    </div>
  </div>
  
<% else %>

  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h2 class="review-link">Want to write a review for a classified ad?<%= link_to "Create an account", new_user_path %> 
      or <%= link_to "sign in", login_path%></h2>
    </div>
  </div>
  
<% end %>



