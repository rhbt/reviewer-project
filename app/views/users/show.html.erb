<div class="row">
  <div class="col-md-12">
    <h1 class="main-title"><%= @user.email %></h1>
  </div>
</div>


<h2 class="profile-subheader">Reviews you've submitted</h2>
  <% @user.reviews.each do |r| %>
    <div class="row saved-review" id="review-<%= r.id %>">
      <div class="col-md-12">
         <h3 class="saved-review-header"><%= link_to "#{r.title}", r %></h3>
          <%= render "shared/static_rating", rating: calculate_rating(r) %>
          <br>
          <%= link_to "Delete", r, method: :delete, remote: :true,
        data: { confirm: "You sure?" } %>
      </div>
    </div>
 <% end %>


<hr>

<div class="row">
  <div class="col-md-12">
    <h2 class="profile-subheader">Saved Reviews</h2>

        <%= render "saved_reviews" %>

  </div>
</div>
