<header class="navbar">
  <div class="container">
    <div class="navbar-header">
      <div class="navbar-brand">
        <%= link_to "Classified Reviewer", root_path, id: 'logo' %>
        
      </div>
    </div>
    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, class: "nav-item" %></li>
        <% if logged_in? %>
          <li><%= link_to "About", about_path, class: 'nav-item' %></li>
          
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Sign up", signup_path, class: 'nav-item' %></li>
          <li><%= link_to "Sign in", login_path, class: 'nav-item' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
