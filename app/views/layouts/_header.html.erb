<header class="navbar navbar-default" role="navigation">
  <div class="container">
    
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>    
    
    <div class="navbar-header">
      <div class="navbar-brand">
        <%= link_to "Classified Reviewer", root_path, id: "logo" %>
      </div>
    </div>
    
    <nav class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        
        <li><%= link_to "Home", root_path, class: "nav-item" %></li>
        <li><%= link_to "Help", help_path, class: 'nav-item' %></li>
        
        <% if logged_in? %>
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu user-options">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Sign up", signup_path, class: 'nav-item' %></li>
          <li><%= link_to "Sign in", login_path, class: 'nav-item' %></li>
        <% end %>
        
      </ul>
    </nav>
 
  </div>
</header>
