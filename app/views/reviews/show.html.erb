<div class="row">
  <div class="col-md-12 text-center">
    <h1><%= @review.url %></h1>
    <div class="col-md-offset-2 col-md-8">
      <p>
        <%= @review.content %>
      </p>
      
      <% if logged_in? %>
        <p>Save review</p>
        <% if current_user?(@review.user) %>
          <%= link_to "delete", @review, method: :delete,
                                       data: { confirm: "You sure?" } %>
        <% end %>
      <% end %>
      
    </div>
    
    
    
  </div>
</div>
