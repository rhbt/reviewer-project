<% if logged_in? %>
  <% if current_user.stickied_reviews.find_by(review_id: params[:id]).nil? &&
  !review_author?(current_user, @review) %>
    <div class="comment-form" id="save-review-button">
      
      <%= form_for(current_user.stickied_reviews.build, remote: :true) do |f| %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :review_id, params[:id]%>
        <%= f.submit "Save this review", class: "btn btn-primary" %>
              
      <% end %>
    </div>
  <% end %>
<% end %>